	    android:padding="10dp"
	    android:layout_marginRight="10dp"
	    ></Button>
	<Button android:layout_width="wrap_content" android:id="@+id/button3"
		android:layout_height="wrap_content" android:text="@string/fuction3"
		android:background="@drawable/menu_bg"
	    android:textColor="@android:color/white"
	    android:padding="10dp"
	    android:layout_marginRight="10dp"></Button>
	
	<Button android:layout_width="wrap_content" android:id="@+id/button4"
		android:layout_height="wrap_content" android:text="@string/fuction4"
		android:background="@drawable/menu_bg"
	    android:textColor="@android:color/white"
	    android:padding="10dp"
	    android:layout_marginRight="10dp"></Button>
	
	<Button android:layout_width="wrap_content" android:id="@+id/button5"
		android:layout_height="wrap_content" android:text="@string/fuction5"
		android:background="@drawable/menu_bg"
	    android:textColor="@android:color/white"
	    android:padding="10dp"
	    android:layout_marginRight="10dp"></Button>
	
	<Button android:layout_width="wrap_content" android:id="@+id/button6"
		android:layout_height="wrap_content" android:text="@string/fuction6"
		android:background="@drawable/menu_bg"
	    android:textColor="@android:color/white"
	    android:padding="10dp"
	    android:layout_marginRight="10dp"></Button>
	
	<Button android:text="Button" android:id="@+id/button9" 
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	 android:layout_weight="1" android:visibility="invisible"></Button>
</LinearLayout>

</LinearLayout>